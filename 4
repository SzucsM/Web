}


using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;

namespace WebApplication2
{
    public class Class1
    {
        private string nev;

        public string Nev
        {
            get { return nev; }
            set { nev = value; }
        }
        private string osztaly;

        public string Osztaly
        {
            get { return osztaly; }
            set { osztaly = value; }
        }
        private string tantargy;

        public string Tantargy
        {
            get { return tantargy; }
            set { tantargy = value; }
        }
        private int ejegy;

        public int Ejegy
        {
            get { return ejegy; }
            set { ejegy = value; }
        }
        private int mjegy;

        public int Mjegy
        {
            get { return mjegy; }
            set { mjegy = value; }
        }
        private int hjegy;

        public int Hjegy
        {
            get { return hjegy; }
            set { hjegy = value; }
        }
        private int njegy;

        public int Njegy
        {
            get { return njegy; }
            set { njegy = value; }
        }
        public Class1(string n,string o, string t, int elso, int masodik, int harmadik, int negyedik)
        {
            nev = n;
            osztaly = o;
            tantargy = t;
            ejegy = elso;
            mjegy = masodik;
            hjegy = harmadik;
            njegy = negyedik;
        }

        public string Informacio()
        {
            return "A tanulo neve:" + nev + ", osztalya:" + osztaly + ", tantargy:" + tantargy + ", " + ejegy + " " + mjegy + " " + hjegy + " " + njegy; 
        }
        public double atlag()
        {
            int osszeg=ejegy+mjegy+hjegy+njegy;
            return osszeg / 4.0;
        }
    }
}
