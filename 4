            Class1 c = new Class1(TextBox5.Text, TextBox6.Text, TextBox7.Text, Convert.ToInt32(TextBox1.Text), Convert.ToInt32(TextBox2.Text), Convert.ToInt32(TextBox3.Text), Convert.ToInt32(TextBox4.Text));
            Label9.Text =""+ c.atlag();
